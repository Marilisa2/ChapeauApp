@using ChapeauApp.Models.ViewModels;
@model List<TableViewModel>
@*

    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "TableIndex";
}
<div id="gridContainer">
    @{
        foreach (TableViewModel tableViewModel in Model)
        {
            // <partial name="_Table" model="tableViewModel" />
            <form id="UpdateTableForm @tableViewModel.TableNumber" action="/Table/Update" method="get">
                <div class="form-group">
                    <input hidden type="text" id="TableStatus" name="TableStatus" class="form-control" required value="@tableViewModel.TableStatus" />
                </div>
                <div class="form-group">
                    <input hidden type="text" id="TableNumber" name="TableNumber" class="form-control" required value="@tableViewModel.TableNumber" />
                </div>
                <title>Rechthoek Knop</title>
                <div id="@tableViewModel.TableNumber" class="rechthoek-knop @tableViewModel.TableStatus" onclick="document.getElementById('UpdateTableForm @tableViewModel.TableNumber').submit();">@tableViewModel.TableNumber</div>
            </form>
        }
        
    }
    <form action="/Employee/Logoff " method="get">
        <button id="logoffButton" type="submit" class="btn btn-primary">logoff</button>
    </form>
    <form action ="/Table/Index " method="get">
        <button id="refreshButton" type="submit" class="btn btn-primary" >refresh</button>
    </form>
     
</div>

